*
    box-sizing border-box
html, body
    padding 0
    margin 0
    font-family font-main

.container
    max-width rem-calc(1200)
    margin 0 auto

header, footer, main
    padding rem-calc(25)

header, footer
    background-color color-main-dark
    color color-main-light
    a
        color inherit
        text-decoration none

.header-menu
    ul
        list-style-type none
        margin 0
        padding 0
        li
            display inline
            padding-right rem-calc(10)

section
    width 100%
    grid()
    aside, article
        cell(1, 1)
    +above(40.063em)
        aside
            cell(1, 3)
        article
            cell(2, 3)


.s-id-register-form
    margin-bottom rem-calc(50)